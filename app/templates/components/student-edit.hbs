<div class="container">
  <form>
    <div class="row">
      <h3>{{name}} {{lastName}}</h3>
      <div class="pull-right">
        <a class="button btn" {{action 'closeWindow'}}>close</a>
      </div>
    </div>
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">First Name</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" id="firstName" placeholder="name" value=name action='updateName' }}
      </div>
    </div>
    <div class="form-group row">
      <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
      <div class="col-sm-10">
        {{input type="text" class="form-control" id="lastName" placeholder="lastName" value=lastName action='updateLastName' }}
      </div>
    </div>

    <div class="form-group row col-md-12">
      <h3>Subjects</h3>
      <table class='table table-bordered'>
        <thead>
          <th>Name</th>
          <th>Credits</th>
        </thead>
        <tbody>
          {{#each subjects as |subject|}}
            <tr>
              <td>{{subject.name}}</td>
              <td>{{subject.credits}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </form>
</div>
