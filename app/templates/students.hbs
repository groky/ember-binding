<div class="container">
  <h1>Students</h1>
  <table class='table table-bordered'>
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Number of subjects</th>
      <th>&nbsp;</th>
    </thead>
    <tbody>
      {{#each students as |student|}}
        <tr>
          <td>{{student.name}}</td>
          <td>{{student.lastName}}</td>
          <td>{{student.subjects.length}}</td>
          <td><a class="button btn" {{action "viewStudent" student}}>view</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  {{#if isShowingAStudent}}
    {{student-edit student=currentStudent isShowingAStudent=isShowingAStudent}}
  {{/if}}
</div>
